{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "sourceMap": true,
        "outDir": "build",
        "rootDir": "src",
        "baseUrl": "src",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "listEmittedFiles": true,
        "allowJs": true
    },
    "exclude": [
        "./node_modules",
        "./gulpfile.js",
        "./build",
        "./libs"
    ]
}